<h3>Groups</h3>
<div class="span8">
  <div class="navbar">
    <div class="navbar-inner">
      <!-- <div class="input-append pull-right">
        <input class="span2" id="search" type="text">
        <button class="btn" type="button">Search</button>
      </div> -->
      <%= button_to "Create", new_group_path, :class => "btn pull-right", :method => :get %>
    </div>
</div>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Timezone</th>
      <th>Registered</th>
      <th>Subscribers</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
  <% @groups.each do |group| %>
    <tr>
      <td><%= link_to group.name %></td>
      <td><%= group.timezone %></td>
      <td><%= group.created_at.to_date %></td>
      <td><%= group.members.size %></td>
      <td>
        <%= link_to("Edit", edit_group_path(group), :class => "btn") %>
        <%= link_to("Delete", group_path(group), :data => { :confirm => "Are you sure?" }, :method => :delete, :class => 'btn') %></td>
    </tr>
  <% end %>
  </tbody>
</table>
</div>