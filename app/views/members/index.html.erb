<body>
  <div>
    <h3>Members</h3>
    <div>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Registered</th>
            <th>Status</th>
          </tr>
        </thead>
        <tbody>
        <% @members.each do |member| %>
          <tr>
            <td><%= link_to member.first_name, member %></td>
            <td><%= member.email %></td>
            <td><%= member.created_at.to_date %></td>
            <td><%= member.daily_logs.where("created_at > ?", Time.now.beginning_of_day).empty? ? "Not Submit" : "Submit"%></td>
          </tr>
        <% end %>
        </tbody>
      </table>
      <hr>
      <p class="text-right"><%= Time.now.to_date%> </p>
    </div>
  </div>
<body>